{
  "name": "solidnotes",
  "private": true,
  "version": "1.2.0",
  "repository": "git@github.com:russelshane/solidnotes.git",
  "author": "russelshane <darsler@pm.me>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn staging",
    "staging": "concurrently \"yarn dev:api\" \"yarn dev:client\"",
    "format": "prettier --write packages/",
    "prepare": "husky install",
    "lint": "eslint --fix packages/**/*",
    "dev:client": "yarn workspaces run client dev",
    "dev:api": "yarn workspaces run api dev"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "concurrently": "^6.4.0",
    "eslint": "7.11.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.0",
    "typescript": "^4.5.2"
  }
}
